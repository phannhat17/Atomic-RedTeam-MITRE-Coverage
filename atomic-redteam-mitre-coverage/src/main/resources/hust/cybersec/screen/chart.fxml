        </StackedBarChart>
    </center>
    <top>
        <VBox prefHeight="207.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" prefHeight="90.0" prefWidth="270.0" text="ATOMIC ANALYTICS">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="50.0" />
                    </VBox.margin>
                </Label>
                <HBox prefHeight="42.0" prefWidth="1200.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="21.0" text="Group by">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="50.0" right="8.0" />
                            </HBox.margin>
                        </Label>
                        <ChoiceBox fx:id="firstChoiceBox" prefWidth="142.0" />
